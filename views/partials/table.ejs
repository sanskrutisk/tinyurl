<table>
  <thead>
    <tr>
      <th>Code</th>
      <th>URL</th>
      <th>Clicks</th>
      <th>Last Clicked</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    ${links.map(link => `
      <tr>
        <td><a href="/code/${link.code}">${link.code}</a></td>
        <td class="truncate">${link.longUrl}</td>
        <td>${link.clicks}</td>
        <td>${link.lastClicked ? new Date(link.lastClicked).toLocaleString() : "Never"}</td>
        <td>
          <form action="/delete/${link.code}" method="POST">
            <button class="delete-btn">Delete</button>
          </form>
        </td>
      </tr>
    `).join("")}
  </tbody>
</table>
